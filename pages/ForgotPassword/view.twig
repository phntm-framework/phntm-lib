<form class="w-full max-w-md pb-16" method="post">
    <h1 class="text-2xl font-bold mb-4">
        Forgot Password?
    </h1>
    <input required type="text" name="username" placeholder="Username" class="p-2 w-full mb-6 bg-white border border-solid border-gray-300 rounded-xs">
    <div class="w-full flex justify-end items-center">

        <div class="flex gap-2 justify-end">
            {% include 'elements/button.twig' with {
                id: 'change-password-submit',
                label: 'Request Change'
            } %}
        </div>
    </div>
</form>
