<section class="max-w-3xl mr-auto h-full">
    {% if backLink %}
        <a href="{{ backLink }}" class="
            block
            text-zinc-600 hover:text-zinc-700
            transition-all duration-200 ease-in-out
            hover:underline
            mb-2
        ">Back</a>
    {% endif %}
    <form method="POST" class="h-full">
        <fieldset class="">
            <legend class="
                text-2xl font-bold text-gray-800 mb-6
            ">{{ entity }}</legend>
            {% for field in form %}
                {% include 'elements/' ~ field.element ~ '.twig' with field %}
            {% endfor %}

            {% include 'elements/button.twig' with {
                id: 'manage-login-submit',
                label: 'Save'
            } %}
        </fieldset>
    <form>
</section>
